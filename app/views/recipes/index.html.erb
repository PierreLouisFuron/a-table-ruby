<h1 class="mb-4">Recipes</h1>

<div class='row mb-5'>
  <div class="col-10">
    <%= form_with(url: recipes_path, method: 'get', local: true) do |form| %>
      <div class="input-group">
        <%= form.text_field :search, placeholder: 'Cake, Salad, Egg, Watermelon, ...', class: 'form-control' %>
        <%= form.submit 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="col-2">
    <%= link_to "New recipe", new_recipe_path, class: "btn btn-primary pull-right" %>
  </div>
</div>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="card recipe-card shadow-sm mb-3">
        <%= link_to recipe, class: "list-group-item list-group-item-action" do %>
        <div class="row g-0">
          <div class="col-4">
            <%= image_tag recipe.get_square_thumbnail, class: 'responsive-height rounded-start', alt: 'menu' %>
          </div>
          <div class="col-8 bg-white rounded-end">
            <div class="card-body">
              <h5 class="card-title text-capitalize"><%= recipe.name %></h5>
              <% recipe.tags.each do |tag| %>
                <span class="badge rounded-pill text-bg-primary"><%= tag.name %></span>
              <% end %>
            </div>
            <div class="card-footer bg-transparent">
              <p class="card-text">
                <small class="text-muted fst-italic"><%= truncate("Source: #{recipe.sources.first.name}", length: 27, separator: '') %></small>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


