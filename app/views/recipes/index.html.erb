<div style="color: green"><%= notice %></div>

<h1>Recipes</h1>

<div class='row mb-3'>
  <div class="col-sm-10">
    <%= form_with(url: recipes_path, method: 'get', local: true) do |form| %>
      <div class="input-group">
        <%= form.text_field :search, placeholder: 'Cake, Salad, Egg, Watermelon, ...', class: 'form-control' %>
        <%= form.submit 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-2">
    <%= link_to "New recipe", new_recipe_path, class: "btn btn-primary pull-right" %>
  </div>
</div>

<div id="recipes" class="list-group">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe.name, recipe, class: "list-group-item list-group-item-action" %>
  <% end %>
</div>


