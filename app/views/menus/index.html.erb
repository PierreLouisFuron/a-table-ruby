<p style="color: green"><%= notice %></p>

<h1>Menus</h1>

<div class="d-flex justify-content-between">
  <div>
    <%= form_with(model: Menu.new) do |form| %>
      <div class="row">
        <div class="col-auto">
          <%= form.date_field :start_date, class: 'form-control col-auto' %>
        </div>
        <div class="col-auto">
          <%= form.date_field :end_date, class: 'form-control col-auto' %>
        </div>
        <div class="col-auto">
          <div class="btn-group">
            <%= form.submit "Create Menu", class:'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="dropdown dropdown-menu-end">
    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Quick Menu
    </button>
    <ul class="dropdown-menu">
      <li><%= button_to 'Just for today', '#', params: { menu: { start_date: DateTime.now, end_date: DateTime.now } }, class: 'dropdown-item' %></li>
      <li><%= button_to 'The next 2 days', '#', params: { menu: { start_date: DateTime.now, end_date: DateTime.now + 1 } }, class: 'dropdown-item' %></li>
      <li><%= button_to 'The next 3 days', '#', params: { menu: { start_date: DateTime.now, end_date: DateTime.now + 2 } }, class: 'dropdown-item' %></li>
      <li><%= button_to 'The next 5 days', '#', params: { menu: { start_date: DateTime.now, end_date: DateTime.now + 4} }, class: 'dropdown-item' %></li>
      <li><%= button_to 'The next week', '#', params: { menu: { start_date: DateTime.now, end_date: DateTime.now + 6} }, class: 'dropdown-item' %></li>
    </ul>
  </div>
</div>

<%= render @menus %>

