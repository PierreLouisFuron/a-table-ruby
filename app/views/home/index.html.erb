<div class="row">
  <h1>On Today's Menu </h1>
  <%= render 'meals', meals: @meals_of_the_day, date: DateTime.now %>

  <h1>And Tomorrow </h1>
  <%= render 'meals', meals: @meals_of_tomorrow, date: DateTime.tomorrow %>


  <div class="col-12">
    <h1> Other Upcoming Deliciously Tasty Recipes </h1>
    <% if @recipes_of_the_future.count == 0 %>
    <h4>Nothing at the moment ðŸ˜¢ </h4>
    <% else %>
      <div class="list-group">
        <% @recipes_of_the_future.each do |recipe| %>
          <%= link_to recipe, class: "list-group-item" do %>
            <%= recipe.name %>
          <% end %>
          <%# image_tag recipe.get_square_thumbnail, class: 'card-img-top bg-danger', alt: 'menu' %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
